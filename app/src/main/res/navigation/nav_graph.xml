<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentPhotos"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/fragmentPhotos"
        android:name="com.p2lem8dev.esssplash.photos.PhotosFragment"
        android:label="@string/photos"
        tools:layout="@layout/photos_fragment">

        <action
            android:id="@+id/photosToPhotosList"
            app:destination="@id/fragmentPhotosList" />

        <action
            android:id="@+id/photosToPhotosHeader"
            app:destination="@id/fragmentPhotosHeader" />
    </fragment>

    <fragment
        android:id="@+id/fragmentPhotosList"
        android:name="com.p2lem8dev.esssplash.photos.list.PhotosListFragment"
        android:label="@string/photos"
        tools:layout="@layout/fragment_photos">

        <action
            android:id="@+id/photosListToPhotosOptions"
            app:destination="@id/fragmentPhotosOptions"
            app:popUpTo="@id/fragmentPhotosList" />
    </fragment>

    <fragment
        android:id="@+id/fragmentPhotosHeader"
        android:name="com.p2lem8dev.esssplash.photos.header.PhotosHeaderFragment"
        android:label="@string/photos"
        tools:layout="@layout/fragment_photos_header" />

    <fragment
        android:id="@+id/fragmentPhotosOptions"
        android:name="com.p2lem8dev.esssplash.photos.list.options.PhotosOptionsFragment"
        android:label="@string/photos_options"
        tools:layout="@layout/fragment_photos_options">
        <argument
            android:name="model"
            app:argType="com.p2lem8dev.esssplash.photos.list.options.PhotosOptionsFragment$PhotoModel" />
    </fragment>


</navigation>
