<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="isLightTheme">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="color_background">@color/colorWhite</item>
    </style>

    <style name="ProfileImageSmall">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="CellLoading">
        <item name="android:layout_height">100dp</item>
    </style>

</resources>
